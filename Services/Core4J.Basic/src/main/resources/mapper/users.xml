<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ikcoder.services.mappers.Mapper_users">
    <select id="Select_users_id" resultType="ikcoder.entities.coredb_basic.DTO.DTO_users">
        select * from users where id=#{id}
    </select>
    <select id="Select_users_uid" resultType="ikcoder.entities.coredb_basic.DTO.DTO_users">
        select * from users where username=#{usrname}
    </select>
    <select id="Select_users" resultType="ikcoder.entities.coredb_basic.DTO.DTO_users">
        select * from users
    </select>
    <insert id="Insert_users">
        insert into users(username,pwd,status,usrtype) values(#{username},#{pwd},#{status},#{usrtype})
    </insert>
    <update id="Update_users_pwd">
        update users set pwd=#{pwd} where id=#{id}
    </update>
    <update id="Update_users_status">
        update users set status=#{status} where id=#{id}
    </update>
    <delete id="Delete_users_id">
        delete from users where id = #{id}
    </delete>
    <delete id="Delete_users_uername">
        delete from users where username = #{username}
    </delete>
</mapper>